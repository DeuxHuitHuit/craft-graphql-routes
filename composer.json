{
    "name": "deuxhuithuit/craft-graphql-routes",
	"description": "Adds a controller to generate a routes config file.",
    "type": "craft-plugin",
	"version": "1.0.0",
    "license": "mit",
	"authors": [
		{
			"name": "Deux Huit Huit",
			"homepage": "https://deuxhuithuit.com"
		}
	],
	"support": {
		"email": "open-source@deuxhuithuit.com",
		"issues": "https://github.com/DeuxHuitHuit/craft-graphql-routes/issues?state=open",
		"source": "https://github.com/DeuxHuitHuit/craft-graphql-routes",
		"docs": "https://github.com/DeuxHuitHuit/craft-graphql-routes/blob/main/README.md"
	},
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.5.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "deuxhuithuit\\craftgraphqlroutes\\": "src/"
        }
    },
    "extra": {
        "handle": "graphql-routes",
        "name": "graphql-routes",
        "developer": "felix"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
